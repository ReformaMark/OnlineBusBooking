@model IEnumerable<OnlineBusBooking.Models.Route>


<h2>Details</h2>


@{ if (TempData["alertMessageDelete"] != null)
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Well done!</strong> You successfully @TempData["alertMessage"].
        </div>
    }

}
<div class="row">
    <div class="col-md-9">
        <button class="btn btn-info">
            @Html.ActionLink("Create New", "AddRoute")
        </button>
    </div>

    @using (Html.BeginForm("Details", "Route", FormMethod.Get))
    {
        <div class="col-md-3">
            <form class="navbar-form navbar-right form-inline" role="search">
                <div class="form-group">
                    @Html.TextBox("searching")
                    <button type="submit" class="btn btn-default">Search</button>
                </div>
            </form>
        </div> 
}
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RouteName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fare)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableSeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BusMaster.BusNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination.PlaceOfDestination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Origintbl.Origin)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RouteName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fare)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableSeats)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BusMaster.BusNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination.PlaceOfDestination)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Origintbl.Origin)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.RouteId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.RouteId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.RouteId })
                </td>
            </tr>
        }

    </table>