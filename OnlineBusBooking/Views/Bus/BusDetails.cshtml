@model IEnumerable<OnlineBusBooking.Models.BusMaster>


<h2>BusDetails</h2>

@{
    if (TempData["alertMsgEdit"] != null)
    {
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Well done!</strong> You successfully @TempData["alertMsgEdit"].
        </div>
    }
    if (TempData["busfk"] != null)
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            @TempData["busfk"].
        </div>
    }
}
<button>
    @Html.ActionLink("Create New", "AddBus")
</button>
<table class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BusNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BustType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalSeat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SeatColumn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SeatRow)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookedSeat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AvailableSeats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BusName)
        </th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Url.Content(item.Image ?? "defaultImg.jpg")" class="img-rounded" width="100" height="100" />
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.BusNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BustType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalSeat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatColumn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatRow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookedSeat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusName)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditBus", new { id = item.BusId })|
                @Html.ActionLink("Delete", "DeleteBus", new { id = item.BusId })|

            </td>
        </tr>
    }

</table>